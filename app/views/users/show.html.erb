<div class='container'>
  <%= render @user %>

  <%= form_with model: @user do |form| %>
    <div class='form-group'>
      <div class='form-row'>
        <div class='col'>
          <%= form.number_field :height, min: 0, step: 0.1, placeholder: 'Height in cms', class: 'form-control', required: true %>
        </div>

        <div class='col'>
          <%= form.number_field :weight, min: 1, step: 0.1, placeholder: 'Weight in kgs', class: 'form-control', required: true %>
        </div>
      </div>
    </div>

    <div class='form-row'>
      <%= form.submit 'submit', class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
