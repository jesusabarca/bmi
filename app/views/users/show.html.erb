<div class='container'>
  <%= render @user %>

  <%= form_with model: @user do |form| %>
    <div class='form-group'>
      <div class='form-row'>
        <div class='col'>
          <%= form.number_field :height, min: 0, step: 0.1, class: 'form-control', required: true %>
          <small id='passwordHelpInline' class='text-muted'>
            <%= t '.height' %>
          </small>
        </div>

        <div class='col'>
          <%= form.number_field :weight, min: 1, step: 0.1, class: 'form-control', required: true %>
          <small id='passwordHelpInline' class='text-muted'>
            <%= t '.height' %>
          </small>
        </div>
      </div>
    </div>

    <div class='form-row'>
      <%= form.submit t('.submit'), class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
